<?xml version="1.0" encoding="utf-8"?>
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/nav_pitch_a_project"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="tk.chiragarora.navigationdrawer.Feedback"
                android:background="#000000">


    <Button
                    android:text="SUBMIT"
                    android:textColor="#ffffff"
                    android:background="@drawable/mybutton"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    tools:fontFamily="sans-serif"
                    tools:textSize="24sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="14dp"
                    android:fontFamily="sans-serif-condensed"
                    android:onClick="displayToast"/>


    <EditText
                    android:layout_width="match_parent"
                    android:inputType="textLongMessage"
                    android:textSize="24sp"
                    android:background="@drawable/border_style2"
                    android:textCursorDrawable="@null"
                    android:layout_height="125dp"
                    android:layout_above="@+id/button"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="30dp"
                    android:gravity="top"
                    android:hint="Problem Description"
                    android:textColor="#ffffff"
                    android:textColorHint="#474743"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:inputType="textWebEmailAddress"
        android:id="@+id/editText7"
        android:textSize="24sp"
        tools:layout_weight="15"
        android:background="@drawable/border_style2"
        android:hint="Contact No."
        android:textCursorDrawable="@null"
        android:textColorHint="#474743"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/editText"
        android:textSize="24sp"
        tools:layout_weight="15"
        android:background="@drawable/border_style2"
        android:hint="Email ID"
        android:textCursorDrawable="@null"
        android:textColorHint="#474743"
        android:textColor="#ffffff"
        android:layout_marginBottom="74dp"
        android:layout_alignBottom="@+id/editText7"
        android:layout_alignParentStart="true" />

    <TextView

        android:text="Your Feedback is important to us."
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="22sp"
        android:textColor="#ffffff"
        tools:textSize="22sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:text="*PROBLEM DETAILS*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:textColor="#ffffff"
        tools:textSize="20sp"
        android:layout_marginTop="76dp"
        android:fontFamily="monospace"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />


</RelativeLayout>