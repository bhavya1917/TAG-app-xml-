<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">



        <android.support.v7.widget.CardView
            android:id="@+id/card_view11"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="4dp"
            card_view:contentPadding="10dp"
            card_view:cardBackgroundColor="@color/colorBlack"
            android:layout_weight="3.12">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="188dp"
                card_view:srcCompat="@drawable/nfs"
                android:id="@+id/imageView3" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignRight="@+id/imageView2"
                android:layout_alignEnd="@+id/imageView2"
                android:id="@+id/radioButton1"
                app:buttonTint="@color/colorWhite"
                />

        </android.support.v7.widget.CardView>





        <android.support.v7.widget.CardView
            android:id="@+id/card_view12"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="4dp"
            card_view:contentPadding="10dp"
            card_view:cardBackgroundColor="@color/colorBlack"
            android:layout_weight="1.23">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="188dp"
                card_view:srcCompat="@drawable/fifa"
                android:id="@+id/imageView4" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignRight="@+id/imageView2"
                android:layout_alignEnd="@+id/imageView2"
                android:id="@+id/radioButton2"
                app:buttonTint="@color/colorWhite"
                />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view13"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="4dp"
            card_view:contentPadding="10dp"
            card_view:cardBackgroundColor="@color/colorBlack"
            android:layout_weight="1.23">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="188dp"
                card_view:srcCompat="@drawable/cs"
                android:id="@+id/imageView5" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignRight="@+id/imageView2"
                android:layout_alignEnd="@+id/imageView2"
                android:id="@+id/radioButton3"
                app:buttonTint="@color/colorWhite"
                />


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/card_view14"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="4dp"
            card_view:contentPadding="10dp"
            card_view:cardBackgroundColor="@color/colorBlack"
            android:layout_weight="1.23">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="188dp"
                card_view:srcCompat="@drawable/dota"
                android:id="@+id/imageView6" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignRight="@+id/imageView2"
                android:layout_alignEnd="@+id/imageView2"
                android:id="@+id/radioButton4"
                app:buttonTint="@color/colorWhite"
                />


        </android.support.v7.widget.CardView>




    </LinearLayout>
</ScrollView>