<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roshni.userdetails.MainActivity">


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#ffc000" />
    <View
        android:id="@+id/view2"
        android:layout_below="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee9e9" />


    <TextView
        android:text="FIRST NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/textView8"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textSize="28sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText6"
        tools:background="@android:color/white" />

    <TextView
        android:text="LAST NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/textView9"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textSize="28sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText7"
        android:background="@android:color/white" />

    <TextView
        android:text="MOBILE NUMBER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textView10"
        android:textSize="28sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_below="@+id/editText7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText8"
        tools:background="@android:color/white" />

    <TextView
        android:text="REGISTRATION NUMBER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/textView12"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textSize="28sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:ems="10"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText9"
        android:textColor="@android:color/white"
        tools:background="@android:color/white" />

    <TextView
        android:text="BLOCK & ROOM NUMBER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/textView13"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText10"
        android:background="@android:color/white" />

    <TextView
        android:text="USER DETAILS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="If VITIAN, include:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textSize="28sp"
        android:layout_below="@+id/editText8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <Button
        android:text="SAVE"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/view3"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/button"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_orange_light"
        tools:background="#ffc000" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu1"
        android:id="@+id/imageButton2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView14"
        android:layout_toStartOf="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:background="#ffc000"
        android:paddingLeft="0dp" />


</RelativeLayout>
